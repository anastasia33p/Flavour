<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingLeft="32dp"
    android:paddingRight="32dp">

    <ImageView
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/steak_meat_beefsteak_chop_food_barbecue_icon_207978"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/monst_bold"
        android:text="Регистрация"
        android:textSize="36sp"
        android:textColor="?colorSecondary"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="32dp"
        style="?attr/textInputFilledStyle"
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ФИО"
        app:boxBackgroundColor="#FBEBE1"
        app:boxStrokeWidth="0dp"
        app:endIconMode="custom"
        app:endIconDrawable="@drawable/person"
        app:endIconTint="?colorOutlineVariant">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nameInp"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="24dp"
        android:id="@+id/menu"
        style="@style/Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Роль"
        app:endIconTint="?colorOutlineVariant"
        app:boxBackgroundColor="#FBEBE1"
        app:boxStrokeWidth="0dp">

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            app:simpleItems="@array/roles_array"
            android:id="@+id/role"
            />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="24dp"
        style="?attr/textInputFilledStyle"
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Почта"
        app:boxBackgroundColor="#FBEBE1"
        app:boxStrokeWidth="0dp"
        app:endIconMode="custom"
        app:endIconDrawable="@drawable/email"
        app:endIconTint="?colorOutlineVariant">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/emailInp"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="24dp"
        style="?attr/textInputFilledStyle"
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Пароль"
        app:boxBackgroundColor="#FBEBE1"
        app:boxStrokeWidth="0dp"
        app:endIconMode="custom"
        app:endIconDrawable="@drawable/password"
        app:endIconTint="?colorOutlineVariant">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/passwordInp"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="24dp"
        style="?attr/textInputFilledStyle"
        android:id="@+id/password2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Повторите пароль"
        app:boxBackgroundColor="#FBEBE1"
        app:boxStrokeWidth="0dp"
        app:endIconMode="custom"
        app:endIconDrawable="@drawable/password"
        app:endIconTint="?colorOutlineVariant">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/passwordInp2"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:layout_marginTop="32dp"
        style="@style/Widget.Material3.Button.TonalButton"
        android:id="@+id/sign"
        android:backgroundTint="?colorSecondaryContainer"
        android:textColor="?colorSecondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Регистрация" />

</LinearLayout>